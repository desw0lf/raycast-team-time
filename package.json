{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "team-time",
  "title": "Team Time",
  "description": "Quick overview of the team's timezones",
  "icon": "icon.png",
  "author": "liununu",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "manage",
      "title": "Manage Team Time",
      "description": "Manages the Team's Timezones",
      "mode": "view",
      "interval": "1m"
    },
    {
      "name": "menu-bar",
      "title": "Team Time from Menu Bar",
      "description": "Shows the Team's Timezones from Menu Bar",
      "mode": "menu-bar",
      "interval": "1m"
    }
  ],
  "dependencies": {
    "@raycast/api": "latest"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.8",
    "@types/node": "18.18.4",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
